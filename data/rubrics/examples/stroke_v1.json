  "key_questions": [
    {
      "id": "onset_time",
      "anchor": "#Q.onset_time",
      "label": "When did symptoms start? (Last known well)",
      "critical": true,
      "phrases": [
        "when did this start",
        "what time did you notice",
        "when were you last normal",
        "last known well",
        "when did you first notice"
      ]
    },
    {
      "id": "focal_symptoms",
      "anchor": "#Q.focal_symptoms",
      "label": "Which specific functions are affected?",
      "critical": true,
      "phrases": [
        "which side is weak",
        "can you move your arm",
        "can you move your leg",
        "facial droop",
        "speech difficulty",
        "trouble speaking"
      ]
    },
    {
      "id": "sudden_onset",
      "anchor": "#Q.sudden_onset",
      "label": "Was the onset sudden or gradual?",
      "critical": true,
      "phrases": [
        "sudden onset",
        "came on suddenly",
        "gradual onset",
        "how quickly did it start"
      ]
    },
    {
      "id": "headache",
      "anchor": "#Q.headache",
      "label": "Any associated headache?",
