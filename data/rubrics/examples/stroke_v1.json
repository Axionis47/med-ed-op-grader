  "key_questions_policy": {
    "anchor": "#R.key_questions",
    "critical_weight": 2.0,
    "noncritical_weight": 1.0,
    "coverage_threshold": 0.7
  },
  "reasoning": {
    "anchor": "#R.reasoning",
    "required_links": [
      {
        "id": "acute_to_stroke",
        "anchor": "#R.reason.acute_to_stroke",
        "description": "Acute focal deficit → consider stroke",
        "pattern": "(acute|sudden).*(focal|weakness|deficit).*(stroke|CVA)|(stroke|CVA).*(acute|sudden).*(focal|weakness|deficit)"
      },
      {
        "id": "onset_to_ct",
        "anchor": "#R.reason.onset_to_ct",
        "description": "Time of onset → need for urgent CT",
        "pattern": "(time|onset|when).*(CT|imaging|scan)|(CT|imaging|scan).*(urgent|immediate|stat|emergency)"
      },
      {
        "id": "anticoagulation_risk",
        "anchor": "#R.reason.anticoagulation_risk",
        "description": "Anticoagulation status → bleeding risk",
        "pattern": "(anticoagulant|blood thinner|warfarin).*(bleed|hemorrhage|risk)|(bleed|hemorrhage).*(anticoagulant|blood thinner)"
      }
    ],
    "major_gap_penalty": -0.5
  },
  "summary": {
    "anchor": "#R.summary",
    "max_tokens": 80,
    "overflow_divisor": 20,
    "required_elements": [
      {
        "id": "problem",
        "anchor": "#R.summary.req.problem",
        "description": "Chief complaint or problem statement",
        "pattern": "(\\d+.year.old|\\d+.y/o).*(male|female|patient|man|woman)"
      },
      {
        "id": "pos2",
        "anchor": "#R.summary.req.pos2",
        "description": "At least 2 positive findings",
        "pattern": null
      },
      {
        "id": "neg1",
        "anchor": "#R.summary.req.neg1",
        "description": "At least 1 negative finding",
        "pattern": "(no|denies|negative for)"
      },
      {
        "id": "leading_dx",
        "anchor": "#R.summary.req.leading_dx",
        "description": "Leading diagnosis",
        "pattern": "(concern|worried|suspect|likely|diagnosis|differential).*(stroke|CVA|ischemic|hemorrhagic)"
      }
    ]
  },
  "communication": {
    "anchor": "#R.communication",
