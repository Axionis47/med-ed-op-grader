  "key_questions_policy": {
    "anchor": "#R.key_questions",
    "critical_weight": 2.0,
    "noncritical_weight": 1.0,
    "coverage_threshold": 0.75
  },
  "reasoning": {
    "anchor": "#R.reasoning",
    "required_links": [
      {
        "id": "chest_pain_to_acs",
        "anchor": "#R.reason.chest_pain_to_acs",
        "description": "Chest pain characteristics → consider ACS",
        "pattern": "(chest pain|pressure|squeezing).*(ACS|acute coronary|MI|heart attack|cardiac)"
      },
      {
        "id": "risk_factors_to_cardiac",
        "anchor": "#R.reason.risk_factors_to_cardiac",
        "description": "Risk factors → increased cardiac concern",
        "pattern": "(risk factor|diabetes|hypertension|smoking).*(cardiac|heart|coronary)"
      },
      {
        "id": "ekg_troponin_needed",
        "anchor": "#R.reason.ekg_troponin_needed",
        "description": "Suspected ACS → need EKG and troponin",
        "pattern": "(EKG|ECG|troponin).*(urgent|immediate|stat|rule out)"
      }
    ],
    "major_gap_penalty": -0.5
  },
  "summary": {
    "anchor": "#R.summary",
    "max_tokens": 90,
    "overflow_divisor": 20,
    "required_elements": [
      {
        "id": "problem",
        "anchor": "#R.summary.req.problem",
        "description": "Chief complaint or problem statement",
        "pattern": "(\\d+.year.old|\\d+.y/o).*(male|female|patient|man|woman)"
      },
      {
        "id": "pain_description",
        "anchor": "#R.summary.req.pain_description",
        "description": "Description of chest pain",
        "pattern": "(chest pain|chest pressure|chest discomfort)"
      },
      {
        "id": "risk_factors",
        "anchor": "#R.summary.req.risk_factors",
        "description": "Mention of cardiac risk factors",
        "pattern": "(diabetes|hypertension|smoking|hyperlipidemia|family history)"
      },
      {
        "id": "leading_dx",
        "anchor": "#R.summary.req.leading_dx",
        "description": "Leading diagnosis",
        "pattern": "(concern|worried|suspect|likely|diagnosis|differential).*(ACS|acute coronary|MI|angina|cardiac)"
      }
    ]
  },
  "communication": {
    "anchor": "#R.communication",
