  "key_questions": [
    {
      "id": "pain_quality",
      "anchor": "#Q.pain_quality",
      "label": "What does the pain feel like?",
      "critical": true,
      "phrases": [
        "what does the pain feel like",
        "describe the pain",
        "quality of pain",
        "sharp or dull",
        "pressure or squeezing"
      ]
    },
    {
      "id": "pain_location",
      "anchor": "#Q.pain_location",
      "label": "Where exactly is the pain?",
      "critical": true,
      "phrases": [
        "where is the pain",
        "location of pain",
        "point to where it hurts",
        "show me where"
      ]
    },
    {
      "id": "radiation",
      "anchor": "#Q.radiation",
      "label": "Does the pain radiate anywhere?",
      "critical": true,
      "phrases": [
        "does it radiate",
        "does it spread",
        "pain go anywhere else",
        "travel to your arm",
        "travel to your jaw"
      ]
    },
    {
      "id": "onset_timing",
      "anchor": "#Q.onset_timing",
      "label": "When did the pain start?",
      "critical": true,
      "phrases": [
        "when did it start",
        "how long ago",
        "when did you first notice"
      ]
    },
    {
      "id": "exertion_relation",
      "anchor": "#Q.exertion_relation",
      "label": "Related to exertion or rest?",
      "critical": true,
      "phrases": [
        "related to exertion",
        "worse with activity",
        "better with rest",
        "happens when you walk"
      ]
    },
    {
      "id": "associated_symptoms",
      "anchor": "#Q.associated_symptoms",
      "label": "Any shortness of breath, nausea, sweating?",
      "critical": true,
      "phrases": [
        "shortness of breath",
        "trouble breathing",
        "nausea",
        "sweating",
        "diaphoresis"
      ]
    },
    {
      "id": "cardiac_risk_factors",
      "anchor": "#Q.cardiac_risk_factors",
      "label": "Cardiac risk factors (diabetes, hypertension, smoking)?",
      "critical": true,
      "phrases": [
        "do you have diabetes",
        "high blood pressure",
        "hypertension",
        "do you smoke",
        "high cholesterol"
      ]
    },
    {
      "id": "prior_cardiac_history",
      "anchor": "#Q.prior_cardiac_history",
      "label": "Any history of heart problems?",
      "critical": true,
      "phrases": [
        "heart problems",
        "heart attack",
        "MI",
        "cardiac history",
        "stents",
        "bypass surgery"
      ]
    }
