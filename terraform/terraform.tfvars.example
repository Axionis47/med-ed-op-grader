# Terraform Variables - Example Configuration
# Copy this file to terraform.tfvars and fill in your actual values

# REQUIRED: Your AWS Account Details
aws_account_id = "123456789012"  # Replace with your 12-digit AWS account ID
aws_region     = "us-east-1"     # Replace with your preferred region
alert_email    = "your-email@example.com"  # Replace with your email

# OPTIONAL: Custom Configuration
# domain_name    = "medgrader.com"  # Uncomment if you have a domain
# environment    = "prod"           # dev, staging, or prod
# monthly_budget_limit = 1000       # USD per month

# OPTIONAL: Resource Sizing (defaults are production-ready)
# cpu_units      = 512              # 0.5 vCPU per task
# memory_mb      = 1024             # 1GB RAM per task
# min_tasks_per_service = 2         # Minimum tasks for HA
# max_tasks_per_service = 10        # Maximum tasks for scaling

# OPTIONAL: Database Configuration
# db_instance_class = "db.t3.medium"
# db_allocated_storage = 100        # GB

# OPTIONAL: Redis Configuration
# redis_node_type = "cache.t3.medium"

# OPTIONAL: Feature Flags
# enable_multi_az = true            # High availability
# enable_database = true            # PostgreSQL for multi-user
# enable_redis = true               # Caching layer
# enable_auto_scaling = true        # Auto-scale based on load
# enable_backup = true              # Automated backups
# backup_retention_days = 30        # Days to keep backups

