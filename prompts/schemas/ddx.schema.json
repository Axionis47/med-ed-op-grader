{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": ["dx", "why_for", "why_against", "priority", "evidence"],
        "properties": {
          "dx": {"type": "string"},
          "why_for": {"type": "array", "items": {"type": "string"}},
          "why_against": {"type": "array", "items": {"type": "string"}},
          "priority": {"type": "integer"},
          "evidence": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "array", "items": [{"type": "integer"},{"type": "integer"}], "minItems": 2, "maxItems": 2}
          }
        }
      }
    }
  }
}

