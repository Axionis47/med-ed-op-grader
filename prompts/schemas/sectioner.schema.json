{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["sections"],
  "properties": {
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "start_line", "end_line", "evidence"],
        "properties": {
          "name": {"type": "string"},
          "start_line": {"type": "integer", "minimum": 1},
          "end_line": {"type": "integer", "minimum": 1},
          "evidence": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "array", "items": [{"type": "integer"},{"type": "integer"}], "minItems": 2, "maxItems": 2}
          }
        }
      }
    }
  }
}

