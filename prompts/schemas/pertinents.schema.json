{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "present", "placement", "evidence"],
        "properties": {
          "name": {"type": "string"},
          "mandatory": {"type": ["boolean", "null"]},
          "present": {"type": "boolean"},
          "placement": {"type": "string", "enum": ["hpi", "ros", "other"]},
          "evidence": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "array", "items": [{"type": "integer"},{"type": "integer"}], "minItems": 2, "maxItems": 2}
          }
        }
      }
    }
  }
}

